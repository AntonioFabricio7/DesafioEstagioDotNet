@model GestaoFornecedores.Models.Fornecedor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Fornecedor</h4>
    <hr />

    <div>
        @if (!string.IsNullOrEmpty(Model.FotoNomeArquivo))
        {
            <img src="~/imagens/@Model.FotoNomeArquivo" alt="Foto do Fornecedor" style="width:200px; height:200px; object-fit: cover; margin-bottom: 20px; border-radius: 8px;" />
        }
        else
        {
            <img src="~/imagens/placeholder.png" alt="Sem Foto" style="width:200px; height:200px; object-fit: cover; margin-bottom: 20px; border-radius: 8px;" />
        }
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CNPJ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CNPJ)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Segmento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Segmento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CEP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CEP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>